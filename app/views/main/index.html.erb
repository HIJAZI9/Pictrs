

<div id="mainDiv">
  <div class="welcome-message">
    <% if current_user %>
      <p>Welcome, <%= current_user.username %>!</p>
      <%= button_to("Logout", logout_path, method: :delete, data: { turbo_method: :delete }, class: "logout-btn") %>
    <% end %>
  </div>
  <div class="slideshow-container">

    <%= render 'notification' %>

    <div class="mySlides">
      <%= render 'page01' %>
    </div>

    <div class="mySlides">
      <%= render 'page02' %>
    </div>

  </div>
</div>